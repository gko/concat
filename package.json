  "bin": "./bin/concat",
  "engines" : {
    "node" : ">=6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gko/concat"
  },
  "keywords": [
    "concatenate",
    "files",
    "concat",
    "join"
  ],
  "author": "Konstantin Gorodinskiy <mail@konstantin.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gko/concat/issues"
  },
  "homepage": "https://github.com/gko/concat#readme",
  "devDependencies": {
    "@types/node": "^7.0.0",
    "mocha": "^3.2.0",
    "typescript": "^2.1.5"
  },
  "dependencies": {
    "commander": "^2.9.0"
  }
}
